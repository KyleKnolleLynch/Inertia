{
  "manifest_version": 2,
  "name": "Inertia",
  "short_name": "Inertia",
  "start_url": "/index.html",
  "display": "minimal-ui",
  "background_color": "#b6e2e0",
  "theme_color": "#2dffba",
  "description": "Welcome Page",
  "version": "1.0.0",
  "icons": [
    {
      "src": "/images/icons/inertia_72x72.png",
      "type": "image/png",
      "sizes": "72x72"
    },
    {
      "src": "/images/icons/inertia_96x96.png",
      "type": "image/png",
      "sizes": "96x96"
    },
    {
      "src": "/images/icons/inertia_128x128.png",
      "type": "image/png",
      "sizes": "128x128"
    }
  ],
  "browser_action": {
    "default_icon": "/images/icons/inertia_72x72.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "geolocation",
    "http://*/*",
    "webNavigation",
    "history",
    "storage"
  ],
  "background": {
    "scripts": ["app.js"],
    "persistent": false
  }
}
