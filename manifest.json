{
  "manifest_version": 2,
  "name": "Inertia",
  "short_name": "Inertia",
  "start_url": "/index.html",
  "display": "browser",
  "background_color": "#a1a1a1",
  "theme_color": "#d6d6d6",
  "description": "Welcome Page",
  "version": "1.0.0",
  "icons": [
    {
      "src": "/images/icons/inertiaIcon_72.png",
      "type": "image/png",
      "sizes": "72x72"
    },
    {
      "src": "/images/icons/inertiaIcon_96.png",
      "type": "image/png",
      "sizes": "96x96"
    },
    {
      "src": "/images/icons/inertiaIcon_128.png",
      "type": "image/png",
      "sizes": "128x128"
    },
    {
      "src": "/images/icons/inertiaIcon_144.png",
      "type": "image/png",
      "sizes": "144x144"
    },
    {
      "src": "/images/icons/inertiaIcon_152.png",
      "type": "image/png",
      "sizes": "152x152"
    },
    {
      "src": "/images/icons/inertiaIcon_192.png",
      "type": "image/png",
      "sizes": "192x192"
    },
    {
      "src": "/images/icons/inertiaIcon_384.png",
      "type": "image/png",
      "sizes": "384x384"
    },
    {
      "src": "/images/icons/inertiaIcon_512.png",
      "type": "image/png",
      "sizes": "512x512"
    }
  ],
  "browser_action": {
    "default_icon": "/images/icons/inertiaIcon_72.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "geolocation",
    "http://*/*",
    "webNavigation",
    "history",
    "storage"
  ],
  "background": {
    "scripts": ["app.js"],
    "persistent": true
  }
}
